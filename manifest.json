{
  "manifest_version": 3,
  "name": "AI Accessibility Assistant",
  "version": "1.0.0",
  "description": "Dark mode, text-to-speech, and AI-powered website summarization with Groq/Gemini",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "commands": {
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Alt+D"
      },
      "description": "Toggle dark mode"
    },
    "read-page": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Read page aloud"
    },
    "summarize-page": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Summarize page"
    },
    "focus-mode": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Toggle focus mode"
    }
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/dark-mode.css"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/dark-mode.css",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}